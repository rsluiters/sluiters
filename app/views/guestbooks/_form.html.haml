= form_for @guestbook do |f|
  - if @guestbook.errors.any?
    #error_explanation
      %h2= "#{pluralize(@guestbook.errors.count, "error")} prohibited this guestbook from being saved:"
      %ul
        - @guestbook.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :tenant_id
    = f.number_field :tenant_id
  .field
    = f.label :title
    = f.text_field :title
  .field
    = f.label :content
    = f.text_area :content
  .field
    = f.label :status
    = f.number_field :status
  .field
    = f.label :originator_email
    = f.text_field :originator_email
  .field
    = f.label :originator_name
    = f.text_field :originator_name
  .actions
    = f.submit 'Save'
